// Tests for if expressions in return statements and recursion
// Demonstrates proper if expression handling in both interpreter and JavaScript backends

fn test_return_if(times) {
    return if (times > 0) {
        "positive"
    } else {
        "zero or negative"
    };
}

fn countdown_recursive(times) {
    if times > 0 {
        times |> log();
        countdown_recursive(times - 1);
    }
}

log("=== If Expression Tests ===");

// These work correctly in both interpreter and JavaScript backends
test_return_if(3) |> log();
test_return_if(-1) |> log();

countdown_recursive(3);